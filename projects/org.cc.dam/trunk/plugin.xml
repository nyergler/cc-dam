<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="org.cc.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="CC-DAM Perspective"
            class="org.cc.Perspective"
            id="org.cc.perspective">
      </perspective>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="org.cc.application"
            name="Digital Asset Management"/>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            class="org.cc.ImportFileView"
            id="org.cc.ImportFileView"
            name="Import File"/>
      <view
            class="org.cc.DatabaseView"
            id="org.cc.DatabaseView"
            name="Browse Database"/>
      <view
            class="org.cc.QueryView"
            id="org.cc.QueryView"
            name="Query Database"/>
   </extension>

</plugin>
